Program Lab3;

{$APPTYPE CONSOLE}

{$R *.res}

uses
  System.SysUtils;

var i,k,l,m,N,z,errors:integer;
  A:array[0..1000] of real;
  B:array[0..2000] of real;
  check1:boolean;
  vvod:string;

Begin
  k:=1;
  z:=0;
  repeat
    Writeln('¬ведите размер массива');
    Readln(vvod);
    val(vvod,N,errors);
    if (errors>0) or (N<=0) then
    Writeln('¬ведены неверный размер массива');
  until (errors=0) and (N>0);


  for i := 0 to N do
  begin
    repeat
      Writeln(' ¬ведите ', i, ' -ой(ый) элемент массива');
      Readln(vvod);
      val(vvod,A[i],errors);
      if (errors>0) then
      Writeln('¬ведены неверный член массива');
    until (errors=0);
  end;
  Writeln('ѕервое значение в скобках - элемент начального массива');
  Writeln('¬торое значение в скобках - число повторений элемента элемента в массиве');
  for i := 0 to N do
  begin
    check1:= true;
    m:=0;
    k:=1;
    for l := i+1 to N do
    begin
      if (A[i] = A[l]) then
      begin
        k:=k+1;

      end;

    end;
      while m<=z do
      begin
        if A[i]=B[m] then check1:=false;
        m:=m+2;
      end;

      if check1 then
      begin
        B[z]:= A[i];
        B[z+1]:=k;
        write('(');
        write(B[z]:0:3);
        write(',');
        write (trunc(B[z+1]));
        write(')');
        z:=z+2;
      end;

  end;
  readln;
End.
